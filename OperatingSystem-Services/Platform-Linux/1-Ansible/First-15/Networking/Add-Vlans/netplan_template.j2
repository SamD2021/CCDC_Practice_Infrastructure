network:
    version: 2
    renderer: NetworkManager
    ethernets:
        enp1s0:
            dhcp4: true
            dhcp6: true
            match:
                macaddress: {{ ansible_default_ipv4.macaddress }}
            set-name: enp1s0
        enp2s0:
            dhcp4: false
            dhcp6: false
            addresses: [{{ vlan_ip }}/24]
            routes:
              - to: default
                via: {{ vlan_gateway }}
            nameservers:
              addresses: [8.8.8.8]
